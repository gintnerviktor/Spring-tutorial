<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
	default-init-method="onInit">


	<bean id="person" class="com.gmx.spring.test.Person"
		scope="singleton" init-method="onCreate" destroy-method="onDestroy"
		factory-method="getInstance">
		<constructor-arg value="678" name="id" type="int"></constructor-arg>
		<constructor-arg value="Viktor" name="name" type="String"></constructor-arg>
		<property name="taxId" value="122"></property>
		<property name="address" ref="address"></property>
	</bean>

	<bean id="address" class="com.gmx.spring.test.Address">
		<constructor-arg name="street" value="Hunyadi"></constructor-arg>
		<constructor-arg name="postcode" value="1116"></constructor-arg>
	</bean>
	<bean id="personfactory"
		class="com.gmx.spring.test.PersonFactory">
	</bean>
</beans>
